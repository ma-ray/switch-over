{
    "name": "Switch Over",
    "description": "Send links to your phone.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["activeTab", "scripting", "identity"],
    "action": {},
    "oauth2": {
        "client_id": "CLIENT_ID",
        "scopes": [
            "https://www.googleapis.com/auth/userinfo.email", "profile"
        ]
    },
    "options_ui": {
        "page": "pages/options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "./icon/icon16.png",
        "32": "./icon/icon32.png",
        "48": "./icon/icon48.png",
        "128": "./icon/icon128.png"
    },
    "key": "KEY"
}
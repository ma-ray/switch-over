{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true,
    "worker": true
  },
  "extends": "standard",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": "off",
    "comma-dangle": "off",
    "space-before-function-paren": ["error", "never"]
  }
}
